{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "./src"
  },
  "include": [
    "src/**/*",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
